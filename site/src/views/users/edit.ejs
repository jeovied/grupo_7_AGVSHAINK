<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="profileEdit">
    <header>
        <%- include('../partials/header') %>
    </header>
    <h2 class="title" style="margin: 20px auto;">Editar de usuario</h2>
    <main>
        <div>
            <h6>Datos de usuario</h6>
        </div>
        <form action="/users/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data" id="profile-edit">
            <div class="mb-3">
                <label for="name" class="form-label">Nombre</label>
                <input type="text" name="name" value="<%= user.name %>" class="form-control" id="name" aria-describedby="emailHelp">
                <span id="error-name" class="text-danger" style="font-size: small;"><%= locals.errores && errores.name ? errores.name.msg : null %> </span> 
              </div>
            <div class="mb-3">
                <label for="last_name" class="form-label">Apellido</label>
                <input type="text" name="last_name" value="<%= user.last_name %>" class="form-control" id="last_name" aria-describedby="emailHelp">
                <span id="error-last_name" class="text-danger" style="font-size: small;"><%= locals.errores && errores.last_name ? errores.last_name.msg : null %> </span> 
              </div>
            <div class="mb-3">
              <label for="newPassword" class="form-label">Nueva contraseña</label>
              <input type="password" name="newPassword" class="form-control" id="newPassword">
              <span id="error-newPassword" class="text-danger" style="font-size: small;"><%= locals.errores && errores.newPassword ? errores.newPassword.msg : null %> </span> 
            </div>
            <div class="mb-3">
                <label for="number" class="form-label">Número de telefono</label>
                <input type="number" name="number"  value="<%= user.number %>" class="form-control" id="number" aria-describedby="emailHelp">
                <span id="error-number" class="text-danger" style="font-size: small;"><%= locals.errores && errores.number ? errores.number.msg : null %> </span> 
              </div>
              <div class="mb-3">
                <label for="image" class="form-label">Avatar</label>
                <input class="form-control" type="file" name="image" id="image" accept="image/*">
                <div id="preview"></div>
                <span id="error-image" class="text-danger" style="font-size: small;"><%= locals.errores && errores.image ? errores.image.msg : null %> </span> 
              </div>
            <div style="justify-content: center; flex-direction: column; align-items: center;"><button type="submit" class="btn btn-primary" style="margin: 0px auto; display: flex; justify-content: center; flex-direction: column; align-items: center;">Guardar cambios</button></div>
          </form>
            
    </main> 

    
    <footer>
        <%- include('../partials/footer') %>
    </footer>
    <script src="/javascripts/profileEdit.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>